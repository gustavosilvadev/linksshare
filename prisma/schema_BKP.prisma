datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  name      String
  lastName  String  @map("last_name")
  email     String
  userType  String  @map("user_type")
  userName  String  @map("user_name")
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  oldPasswords UserOldPasswords[]
  groups     GroupUser[]
  links      Link[]
  customPages CustomPage[]
}

model UserOldPasswords {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @map("id_user")
  password  String
  status    String   @default("ativo")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id])
}

model GroupUser {
  id          String   @id @default(uuid()) @db.Uuid
  userId      String   @map("user_id")
  groupName   String   @map("group_name")
  statusGroup String   @map("status_group")
  imgIconGroup String @map("img_icon_group")

  user User @relation(fields: [userId], references: [id])
}

model Link {
  id            String   @id @default(uuid()) @db.Uuid
  userId        String   @map("user_id")
  name          String
  href          String
  description   String
  viewStatus    Boolean @map("view_status")
  positionLink  Int     @map("position_link")
  previewAfterClick Boolean @map("preview_after_click")
  clicks        ClickLink[]
  accessedPages AccessedPage[]
  integrationPlatforms IntegrationPlatform[]

  user User @relation(fields: [userId], references: [id])
}

model CustomPage {
  id        String   @id @default(uuid()) @db.Uuid
  linkId   String   @map("link_id")
  userId    String   @map("user_id")
  namePage  String   @map("name_page")
  themePage String   @map("theme_page")
  icons     String

  user User @relation(fields: [userId], references: [id])
  link Link @relation(fields: [linkId], references: [id])
}

model ClickLink {
  id        String   @id @default(uuid()) @db.Uuid
  linkId   String   @map("link_id")
  addressIp String   @map("address_ip")
  created   DateTime @default(now())

  link Link @relation(fields: [linkId], references: [id])
}

model AccessedPage {
  id        String   @id @default(uuid()) @db.Uuid
  linkId   String   @map("link_id")
  pageUrl   String   @map("page_url")
  addressIp String   @map("address_ip")
  created   DateTime @default(now())

  link Link @relation(fields: [linkId], references: [id])
}

model IntegrationPlatform {
  id        String   @id @default(uuid()) @db.Uuid
  linkId   String   @map("link_id")
  api       String
  created   DateTime @default(now())

  link Link @relation(fields: [linkId], references: [id])
}